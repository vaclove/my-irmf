{
  "name": "my-irmf",
  "version": "1.7.0",
  "description": "International Road Movie Festival management system",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js",
    "start:dev": "node server/index.js",
    "db:migrate": "node server/scripts/migrate.js",
    "db:status": "node server/scripts/migrate.js status",
    "azure:build": "npm install && cd client && npm install && npm run build",
    "azure:start": "NODE_ENV=production node server/index.js",
    "test:production": "npm run build && npm run start"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.27.0",
    "axios": "^1.10.0",
    "bcrypt": "^5.1.0",
    "connect-pg-simple": "^10.0.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.1",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "mailgun.js": "^12.0.3",
    "marked": "^16.0.0",
    "mysql2": "^3.14.2",
    "node-cron": "^4.2.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.4",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.11.3",
    "sharp": "^0.34.3",
    "uuid": "^9.0.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
